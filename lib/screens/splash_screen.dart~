import 'package:flutter/material.dart';

class SplashScreen extends StatelessWidget {
  const SplashScreen({super.key});

  // Updated colors based on your palette
  static const Color textBlue = Color(0xFF0734A5); // Your blue
  static const Color textGreen = Color(0xFF43AC45); // Your green
  static const Color textPink = Color(0xFFC42AF8); // Your pink

  // Set a single font size for all letters
  static const double logoFontSize = 40; // finalized size

  TextSpan _coloredLetter(String letter, int index) {
    final colors = [textBlue, textGreen, textPink]; // cycle order
    return TextSpan(
      text: letter,
      style: TextStyle(
        color: colors[index % 3],
        fontSize: logoFontSize,
        fontWeight: FontWeight.w500, // Medium weight from Figma
        fontFamily: 'Digitalt',      // Use Digitalt font
        letterSpacing: logoFontSize * 0.04, // 4% of font size (matches Figma)
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    final jol = <TextSpan>[
      _coloredLetter('J', 0),
      _coloredLetter('O', 1),
      _coloredLetter('L', 2),
    ];

    final puzzles = <TextSpan>[
      _coloredLetter('P', 3),
      _coloredLetter('U', 4),
      _coloredLetter('Z', 5),
      _coloredLetter('Z', 6),
      _coloredLetter('L', 7),
      _coloredLetter('E', 8),
      _coloredLetter('S', 9),
    ];

    return Scaffold(
      body: Container(
        decoration: const BoxDecoration(
          gradient: LinearGradient(
            begin: Alignment.topCenter,
            end: Alignment.bottomCenter,
            colors: [
              Color(0xFFFFC0CB), // Light Pink
              Color(0xFFADD8E6), // Light Blue
              Color(0xFFE6E6FA), // Lavender
            ],
          ),
        ),
        child: Stack(
          children: [
            // Centered Logo + Text
            Center(
              child: Row(
                mainAxisAlignment: MainAxisAlignment.center,
                crossAxisAlignment: CrossAxisAlignment.center,
                children: [
                  Image.asset(
                    'lib/assets/images/logo.png',
                    height: 100,
                  ),
                  const SizedBox(width: 12),
                  Column(
                    mainAxisSize: MainAxisSize.min,
                    crossAxisAlignment: CrossAxisAlignment.start,
                    children: [
                      RichText(text: TextSpan(children: jol)),
                      const SizedBox(height: 4),
                      RichText(text: TextSpan(children: puzzles)),
                    ],
                  ),
                ],
              ),
            ),
            // Bottom-centered "Must Try...!"
            Positioned(
              bottom: 24, // spacing from bottom
              left: 0,
              right: 0,
              child: Text(
                'Must Try...!',
                textAlign: TextAlign.center,
                style: const TextStyle(
                  fontFamily: 'Aleo', // make sure Aleo is added to pubspec.yaml
                  fontWeight: FontWeight.w400, // Regular
                  fontSize: 20,
                  height: 1.0, // line-height 100%
                  color: Colors.black, // #000000
                ),
              ),
            ),
          ],
        ),
      ),
    );
  }
}
